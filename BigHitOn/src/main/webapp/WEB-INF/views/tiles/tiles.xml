<tiles-definitions>
	<definition name="basede-finition" 
	 template="/WEB-INF/views/tiles/layouts/defaultLayout.jsp">
		<!-- header title--> 
		<put-attribute name="title" value=""/>
		
		<!-- header -->
		<!-- <put-attribute name="header" value="/WEB-INF/views/tiles/header.jsp"/>  -->
		
		<!-- sidebar -->
		<put-attribute name="sidebar" value="/WEB-INF/views/tiles/sidebar.jsp"/>
		
		<!-- topbar -->
		<put-attribute name="topbar" value="/WEB-INF/views/tiles/topbar.jsp"/>
		
		
		<!-- body -->
		<put-attribute name="body" value=""/>
		
		
	</definition>
	
	
	<!-- Main -->
	<definition name="main/*" extends="basede-finition">
		<put-attribute name="title" value="Main"/>
		<put-attribute name="body" value="/WEB-INF/views/main/{1}.jsp"/>
	</definition>
	
	<!-- Workspace -->
	<definition name="workspace/*" extends="basede-finition">
		<put-attribute name="title" value="workspace"/>
		<put-attribute name="body" value="/WEB-INF/views/workspace/{1}.jsp"/>
	</definition>
			
	<!-- Thread -->
	<definition name="thread/*" extends="basede-finition">
		<put-attribute name="title" value="thread"/>
		<put-attribute name="body" value="/WEB-INF/views/thread/{1}.jsp"/>
	</definition>
					
</tiles-definitions>



